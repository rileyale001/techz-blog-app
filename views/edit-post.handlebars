<article>
    <a href="/dashboard" class="is-pulled-right"> &larr; back to dashboard</a>
    <h2 class="title mt-5">edit post</h2><hr>
    <form class="edit-post-form">
        <div>
            <label for="post-title">post title:</label>
            <input name="post-title"  class="input" type="text" value="{{post.title}}"/>

            </div>
            <div>
                <label for="post-content">post content</label>
                <input name="post-content"   class="textarea" type="text" value="{{post.post_content}}"/>
            </div>
            <div class="is pulled-right">
                created on {{format_date post.created_at}}
                | 
                <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
            </div>
            <button  class="button is-success" type="submit">save post</button>
            <button class="button is-primary delete-post-btn" type="button" >delete post</button>
    </form>
</article>
{{> comments post.comments}}


<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>
<script src="/js/comment.js"></script>