<div class="card mb-6">
    <header class="card-header card-header-title has-background-green-lighter">
        <div class="column">
            <p class="has-text-primary-light"></p>
            <a href="/post/{{id}}" class="has-text-green is-lowercased is pulled-left">{{title}}</a></div>
        </div>
        <div class="column">
            <span class=""></span>
        </div>
    </header>
    <div class="card-content">
        <div class="content has-text-justified">
            {{post_content}}
        </div>
        <div class="is-pulled-left">
            <b>{{user.username}}</b> |
            <a href="https://twitter.com/{{user.twitter}}"><i class="fab fa-twitter"></i></a>
            <a href="https://github.com/{{user.github}}"><i class="fab fa-github"></i></a>
            | {{format_date created_at}} | <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
        </div>
    </div>